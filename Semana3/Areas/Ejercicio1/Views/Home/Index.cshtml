@model Semana3.Areas.Ejercicio1.Models.FacturationData
@{ 
    ViewBag.title = "Index";
}
<div class="container-fluid">
    <div class="row">
        <h2>Calendario de Facturación</h2>
    </div>
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @using (Html.BeginForm("FormData","Home",FormMethod.Post))
    {
        <div class="row form-collection">
            <div class="col-lg-4">
                <div class="row">
                    <div class="col-sm-4">
                        @Html.LabelFor(m => m.initialDate):
                    </div>
                    <div class="col-sm-8">
                        @Html.TextBoxFor(model => model.initialDate,new { @type = "date" })
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-4">
                        @Html.LabelFor(m => m.finalDate)
                    </div>
                    <div class="col-sm-8">
                        @Html.TextBoxFor(m => m.finalDate,new {@type="date"})
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-4">
                        <label>Periodicidad:</label>
                    </div>
                    <div class="col-sm-8">
                        @Html.DropDownListFor(m => m.selectedPeriod, new SelectList(
                            new List<Object>{
                                new { value = 1 , text = "Mensual"  },
                                new { value = 2 , text = "Bimestral" },
                                new { value = 6 , text = "Semestral"},
                                new { value = 12 , text = "Anual"}
                            }, "value","text"))
                    </div>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="row">
                    <div class="col-sm-4">
                        @Html.LabelFor(m => m.cutDay)
                    </div>
                    <div class="col-sm-8">
                        @Html.TextBoxFor(m => m.cutDay, new { @type = "text", @maxlength = "2" })
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-4">
                        @Html.LabelFor(m => m.printDay)
                    </div>
                    <div class="col-sm-8">
                        @Html.TextBoxFor(m => m.printDay, new { @type = "text", @maxlength = "2" })
                    </div>
                </div>
            </div>
            <div clas="row">
                <div class="col-lg-8">
                    <div class="col-lg-8">
                    </div>
                    <div class="col-lg-4">
                        <button class="btn btn-success" type="submit">Generar</button>
                    </div>
                </div>
            </div>
        </div>
    }



    <script>

    </script>
