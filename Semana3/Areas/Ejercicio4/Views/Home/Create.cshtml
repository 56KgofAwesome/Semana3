@model Semana3.Areas.Ejercicio4.Models.ActivityClass
<head>
    <script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
    <script src="https://unpkg.com/gijgo@1.9.13/js/gijgo.min.js" type="text/javascript"></script>
    <link href="https://unpkg.com/gijgo@1.9.13/css/gijgo.min.css" rel="stylesheet" type="text/css" />
</head>
<h2>Agenda de Actividades</h2>
<br />
@{
    var allowed= ViewBag.allowed;
}
<div class="row">
    <div class="col">
        @if(allowed == false){
            <div class="row">
                <span> No se pudo agendar la actividad debido a que interrumpe con tus demás actividades.</span>
            </div>
        }
    </div>
</div><br />
@using (Html.BeginForm())
{
    <div class="container-fluid">
        <div class="row row-cols-2">
            <div class="col">
                <div class="row">
                    <label> Actividad </label>
                </div>
                <div class="row">
                    <select id="dropdown" width="200" name="activityType">
                        <option value="Reunión"> Reunión </option>
                        <option value="Evento"> Evento </option>
                        <option value="Recordatorio"> Recordatorio </option>
                    </select>
                </div>
            </div>
            <div class="col">
                <div class="row">
                    <label>Hora de inicio </label>
                </div>
                <div class="row">
                    <input id="timepickerStart" name="@Html.NameFor(m => m.scheduledTime)" required/>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-6">
                <div class="row">
                    <label> Fecha </label>
                </div>
                <div class="row">
                    @Html.TextBoxFor(model => model.scheduledDate, new { id = "datepicker" })
                </div>
            </div>
            <div class="col-sm-6">
                <div class="row">
                    <label> Duración </label>
                </div>
                <div class="row">
                    <select id="dropdown" width="200" name="@Html.NameFor(m => m.activityPeriod)">
                        <option value="15"> 15 minutos </option>
                        <option value="30"> 30 minutos </option>
                        <option value="45"> 45 minutos </option>
                        <option value="60"> 1 hora </option>
                    </select>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col">
                <div class="row">
                    <label> Notas </label>
                </div>
                <div class="row">
                    <textarea name="@Html.NameFor(m => m.activityNote)" ></textarea>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col">
                <div class="row row-cols-2">
                    <div class="col-10">

                    </div>
                    <div class="col-2">
                        <button class="btn btn-primary" type="submit">Crear</button>
                    </div>
                </div>
            </div>
            
        </div>
    </div>
}

@section Scripts{
    <script>
        //Time Picker
        mdtimepicker(
            '#timepickerStart',
            {
                format: 'h:mm tt',
                is24hour: true,
                clearBtn: false,
                minTime: "9:00 AM",
                maxTime: "17:00 PM"
            });
        //Date Picker
        today = new Date(new Date().getFullYear(), new Date().getMonth(), new Date().getDate());
        $('#datepicker').datepicker({
            format: 'dd-mm-yyyy',
            modal: true,
            minDate: today
        });

    </script>
}
